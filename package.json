    "bare-subprocess": "^3.0.0",
    "bare-tty": "^3.4.0",
    "bare-url": "^1.1.2",
    "compact-encoding": "^2.15.0",
    "corestore": "^6.18.3",
    "crc-universal": "^1.0.4",
    "debounceify": "^1.1.0",
    "drive-bundler": "^1.4.4",
    "framed-stream": "^1.0.1",
    "fs-native-extensions": "^1.2.7",
