{
  "name": "pear",
  "version": "1.4.1-rc.6",
  "main": "./boot.js",
  "private": true,
  "scripts": {
    "test:gen": "brittle -r test/index.js test/*.test.js",
    "pretest": "pear run  -t scripts/pretest.js",
    "test": "pear run -t test",
    "lint": "standard",
    "lint:fix": "standard --fix",
    "archdump": "node scripts/bootstrap.js --archdump",
    "bootstrap": "node scripts/bootstrap.js"
  },
  "author": "Holepunch",
  "pear": {
    "name": "pear",
    "type": "terminal",
    "stage": {
      "ignore": [
        "prebuilds",
        "pear",
        ".git",
        ".github",
        ".DS_Store",
        "prebuilds",
        "coverage",
        ".vscode",
        "corestore",
        "test",
        "example",
        "todo",
        "pear.js",
        "scripts",
        "sidecar.crash.log",
        "electron-main.crash.log",
        "cli.crash.log",
        "node_modules/.package-lock.json"
      ]
    },
    "platform": {
      "fullSync": 0
    }
  },
  "subsystems": [
    "./subsystems/sidecar/index.js"
  ],
  "standard": {
    "globals": [
      "Bare"
    ],
    "ignore": [
      "__snapshots__",
      "test/fixtures",
      "init/templates",
      "pear",
      "by-arch"
    ]
  },
  "dependencies": {
  },
  "devDependencies": {
    "bare-inspector": "^2.3.0",
    "brittle": "^3.5.2",
    "graceful-goodbye": "^1.3.0",
    "hyperbee": "^2.0.1",
    "hypercore": "^10.36.4",
    "newline-decoder": "^1.0.2",
    "pear-inspect": "^1.1.3",
    "pear-updater-bootstrap": "^1.1.3",
    "port-get": "^1.0.4",
    "standard": "^17.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/holepunchto/pear.git"
  },
  "bugs": {
    "url": "https://github.com/holepunchto/pear/issues"
  },
  "homepage": "https://github.com/holepunchto/pear#readme",
  "license": "Apache-2.0"
}
