{
  "name": "pear",
  "version": "1.11.0",
  "main": "./boot.js",
  "private": true,
  "scripts": {
    "test:gen": "brittle -r test/index.js test/*.test.js",
    "test": "bare scripts/test.mjs",
    "lint": "standard",
    "lint:fix": "standard --fix",
    "archdump": "node scripts/bootstrap.js --archdump",
    "prestage": "node scripts/bootstrap.js --archdump --external-corestore && node scripts/prune-dual-prebuilds.mjs",
    "bootstrap": "node scripts/bootstrap.js",
    "hyperdb:build": "bare scripts/build-hyperdb.js"
  },
  "author": "Holepunch",
  "pear": {
    "name": "pear",
    "type": "terminal",
    "stage": {
      "ignore": [
        "prebuilds",
        "pear",
        "pear.dev",
        "pear.cmd",
        ".git",
        ".gitignore",
        ".github",
        ".DS_Store",
        "prebuilds",
        "coverage",
        ".vscode",
        "corestore",
        "test",
        "examples",
        "todo",
        "pear.js",
        "scripts",
        "sidecar.crash.log",
        "electron-main.crash.log",
        "cli.crash.log",
        "package-lock.json",
        "node_modules/.package-lock.json"
      ]
    },
    "platform": {
      "fullSync": 0
    }
  },
  "subsystems": [
    "./subsystems/sidecar/index.js"
  ],
  "standard": {
    "globals": [
      "Bare",
      "Pear",
      "LOG"
    ],
    "ignore": [
      "__snapshots__",
      "test/fixtures",
      "init/templates",
      "pear",
      "by-arch"
    ]
  },
  "dependencies": {
    "@hyperswarm/seeders": "^1.1.6",
    "b4a": "^1.6.6",
    "bare-bundle": "^1.7.0",
    "bare-env": "^3.0.0",
    "bare-events": "^2.5.0",
    "bare-fs": "^4.0.1",
    "bare-hrtime": "^2.0.9",
    "bare-http1": "^4.0.2",
    "bare-module": "^4.5.0",
    "bare-os": "^3.2.0",
    "bare-pipe": "^4.0.5",
    "bare-readline": "^1.0.6",
    "bare-signals": "^4.0.2",
    "bare-subprocess": "^5.0.3",
    "bare-tty": "^5.0.2",
    "bare-url": "^2.0.3",
    "compact-encoding": "^2.15.0",
    "corestore": "^7.0.18",
    "crc-universal": "^1.0.4",
    "db-lock": "^1.2.0",
    "debounceify": "^1.1.0",
    "drive-analyzer": "^1.0.0",
    "drive-bundler": "^2.3.3",
    "framed-stream": "^1.0.1",
    "fs-native-extensions": "^1.2.7",
    "hypercore-crypto": "^3.4.1",
    "hypercore-id-encoding": "^1.3.0",
    "hyperdb": "^4.7.2",
    "hyperdrive": "^12.0.1",
    "hyperswarm": "^4.7.14",
    "iambus": "^1.0.3",
    "listen-async": "^1.0.0",
    "localdrive": "^2.0.0",
    "localwatch": "^1.4.1",
    "mime-db": "^1.53.0",
    "mirror-drive": "^1.4.0",
    "mutexify": "^1.4.0",
    "paparam": "^1.6.0",
    "pear-api": "~0.0.18",
    "pear-changelog": "^1.0.1",
    "pear-interface": "^1.0.0",
    "pear-ipc": "^5.0.1",
    "pear-link": "^2.1.1",
    "pear-updater": "^3.4.3",
    "pear-updater-bootstrap": "^2.0.0",
    "protomux": "^3.6.0",
    "pw-to-ek": "^1.1.0",
    "quickbit-universal": "^2.2.0",
    "rache": "^1.0.0",
    "ready-resource": "^1.0.3",
    "rocksdb-native": "^3.0.0",
    "safety-catch": "^1.0.2",
    "script-linker": "^2.5.2",
    "sodium-native": "^4.1.1",
    "streamx": "^2.16.1",
    "tiny-byte-size": "^1.1.0",
    "udx-native": "^1.8.9",
    "unix-path-resolve": "^1.0.2",
    "url-file-url": "^1.0.2",
    "watch-drive": "^2.0.2",
    "which-runtime": "^1.2.0",
    "z32": "^1.1.0"
  },
  "devDependencies": {
    "@hyperswarm/testnet": "^3.1.4",
    "brittle": "^3.5.2",
    "graceful-goodbye": "^1.3.0",
