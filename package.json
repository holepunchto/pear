{
  "name": "pear",
  "version": "1.4.1-rc.2",
  "main": "./boot.js",
  "private": true,
  "scripts": {
    "test:gen": "brittle -r test/index.js test/*.test.js",
    "pretest": "pear run  -t scripts/pretest.js",
    "test": "pear run -t test",
    "lint": "standard",
    "lint:fix": "standard --fix",
    "archdump": "node scripts/bootstrap.js --archdump",
    "bootstrap": "node scripts/bootstrap.js"
  },
  "author": "Holepunch",
  "pear": {
    "name": "pear",
    "type": "terminal",
    "stage": {
      "ignore": [
        "prebuilds",
        "pear",
        ".git",
        ".github",
        ".DS_Store",
        "prebuilds",
        "coverage",
        ".vscode",
        "corestore",
        "test",
        "example",
        "todo",
        "pear.js",
        "scripts",
        "sidecar.crash.log",
        "electron-main.crash.log",
        "cli.crash.log",
        "node_modules/.package-lock.json"
      ]
    },
    "platform": {
      "fullSync": 0
    }
  },
  "subsystems": [
    "./subsystems/sidecar/index.js"
  ],
  "standard": {
    "globals": [
      "Bare"
    ],
    "ignore": [
      "__snapshots__",
      "test/fixtures",
      "init/templates",
      "pear",
      "by-arch"
    ]
  },
  "dependencies": {
    "@fontsource/open-sans": "^5.0.22",
